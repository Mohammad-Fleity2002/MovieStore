@model Movies.Models.DTO.RegistrationModel
@{

}

<form asp-action="Registration" method="post" class="w-40">
    <h2 class="pb-10">Register</h2>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="input-container">
        <label asp-for="Email" class="w-40">Email</label>
        <input type="text" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="input-container">
        <label asp-for="Username" class="w-40">Username</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>
    <div class="input-container">
        <label asp-for="Password" class="w-40">Password (eg. John@123)</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input-container">
        <label asp-for="PasswordConfirm" class="w-40">Password confirm</label>
        <input type="password" class="input" asp-for="PasswordConfirm">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <div class="input-container">
    <button type="submit" class="btn btn-default">Registre</button>
    @*<a class="btn btn-sec" href="/UserAuthentication/Login">Login</a>*@@*it's in the navbar*@
     </div>       
</form>
