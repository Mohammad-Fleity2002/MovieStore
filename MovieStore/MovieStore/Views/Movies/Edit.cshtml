@model MovieStore.Models.Movies

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="movie_id" />
            <div class="form-group">
                <label asp-for="movie_name" class="control-label"></label>
                <input asp-for="movie_name" class="form-control" />
                <span asp-validation-for="movie_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie_desc" class="control-label"></label>
                <input asp-for="movie_desc" class="form-control" />
                <span asp-validation-for="movie_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie_quantity" class="control-label"></label>
                <input asp-for="movie_quantity" class="form-control" />
                <span asp-validation-for="movie_quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie_price" class="control-label"></label>
                <input asp-for="movie_price" class="form-control" />
                <span asp-validation-for="movie_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie_add_date" class="control-label"></label>
                <input asp-for="movie_add_date" class="form-control" />
                <span asp-validation-for="movie_add_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="categorie_id" class="control-label"></label>
                <input asp-for="categorie_id" class="form-control" />
                <span asp-validation-for="categorie_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
