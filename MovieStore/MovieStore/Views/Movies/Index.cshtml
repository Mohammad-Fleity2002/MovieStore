@model IEnumerable<MovieStore.Models.Movies>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.movie_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movie_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movie_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movie_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movie_add_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categorie_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.movie_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movie_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movie_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movie_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movie_add_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categorie_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.movie_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.movie_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.movie_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
